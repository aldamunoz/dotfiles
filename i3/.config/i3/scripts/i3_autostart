#!/usr/bin/env bash

##
## Improved Autostart Script for i3

# i3 config directory
idir="$HOME/.config/i3"

# Export desktop session
export XDG_CURRENT_DESKTOP="i3"

# Function to kill a process safely
kill_safe() {
  local process="$1"
  if pidof "$process" &>/dev/null; then
    echo "Stopping $process..."
    killall "$process" || killall -9 "$process"
  fi
}

# Check if a command exists
command_exists() {
  command -v "$1" &>/dev/null
}

# Processes to kill before autostart
processes_to_kill=(xsettingsd ksuperkey xfce-polkit)
for process in "${processes_to_kill[@]}"; do
  kill_safe "$process"
done

# Start polkit agent
if ! pgrep -x "polkit-gnome-authentication-agent-1" &>/dev/null; then
  /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
  echo "polkit-gnome started."
fi

# Enable super keys (only start if it's not running)
if command_exists ksuperkey && ! pgrep -x "ksuperkey" &>/dev/null; then
  ksuperkey -e 'Super_L=Alt_L|F1' &
  ksuperkey -e 'Super_R=Alt_L|F1' &
  echo "ksuperkey started."
fi
# Fix mouse cursor
if command_exists xsetroot; then
  xsetroot -cursor_name left_ptr
fi

# Restore wallpaper
if command_exists xwallpaper; then
  xwallpaper --zoom "$idir/wallpapers/endeavour.png"
  echo "wallpaper set successfully."
fi

# Launch i3 components
for script in i3_dunst i3_bar i3_comp; do
  script_path="$idir/scripts/$script"
  if [[ -x "$script_path" ]]; then
    "$script_path" &
    echo "$script started."
  else
    echo "$script_path not found or not executable."
  fi
done

# Lock the screen when system suspend
xss-lock -- betterlockscreen -l &

echo "i3 environment setup complete."
